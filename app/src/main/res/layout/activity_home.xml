<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_padding"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageview_user"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/textview_user_display_name"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_toRightOf="@id/imageview_user"
            android:gravity="center|start"
            android:hint="No display name found!"
            android:text="User display name"/>

        <TextView
            android:id="@+id/textview_user_email"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_toRightOf="@id/imageview_user"
            android:layout_below="@id/textview_user_display_name"
            android:gravity="center|start"
            android:hint="No email found!"
            android:text="User email"/>

        <TextView
            android:id="@+id/textview_user_phone"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_toRightOf="@id/imageview_user"
            android:layout_below="@id/textview_user_email"
            android:gravity="center|start"
            android:hint="No phone found!"
            android:text="User phone"/>

        <TextView
            android:id="@+id/textview_auth_type"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_toRightOf="@id/imageview_user"
            android:layout_below="@id/textview_user_phone"
            android:gravity="center|start"
            android:text="Auth type"/>

    </RelativeLayout>

</LinearLayout>