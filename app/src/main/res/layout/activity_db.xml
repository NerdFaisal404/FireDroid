<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <com.dd.processbutton.iml.ActionProcessButton
        android:id="@+id/button_write_allowed_for_auth"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="WRITE TO ALLOWED-FOR-AUTH" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="10dp" />

    <com.dd.processbutton.iml.ActionProcessButton
        android:id="@+id/button_write_allowed"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="WRITE TO ALLOWED" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="10dp" />

    <com.dd.processbutton.iml.ActionProcessButton
        android:id="@+id/button_write_not_allowed"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="WRITE TO NOT-ALLOWED" />

</LinearLayout>